# Open Build Outreach Automation Environment Variables
# Copy this file to .env and fill in your actual credentials

# Brevo SMTP Configuration
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your_brevo_smtp_user_here
BREVO_SMTP_PASSWORD=your_brevo_smtp_password_here

# Email Configuration
FROM_EMAIL=team@open.build
FROM_NAME=Open Build Foundry Team
REPLY_TO_EMAIL=team@open.build

# Database Configuration
DATABASE_PATH=data/outreach_automation.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/outreach_automation.log

# Rate Limiting Configuration
MIN_DELAY_SECONDS=30
MAX_DELAY_SECONDS=60

# Daily Limits
MAX_DAILY_EMAILS=15
MAX_CONTACTS_PER_ORG=4
COOLDOWN_DAYS=30

# Optional: OpenAI for enhanced personalization
OPENAI_API_KEY=your_openai_api_key_here

# Analytics API Keys
GOOGLE_ANALYTICS_API_KEY=your_google_analytics_api_key_here
GOOGLE_ANALYTICS_VIEW_ID=your_google_analytics_view_id_here
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_here
GITHUB_REPO=open-build/website

# Optional: Webhook notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
